{
    "compilerOptions": {
        "target": "es6",
        "outDir": "src/js",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "module": "commonjs",
        "esModuleInterop": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/", "src/ts/types/*"]
        }
    },
    "include": [
        "src/ts/**/*"
    ]
}